{
  "name": "prisma-bun-adapter-test-app",
  "version": "1.0.0",
  "description": "Test app for Prisma Bun PostgreSQL adapter",
  "main": "index.ts",
  "scripts": {
    "setup": "bun run setup.ts",
    "validate": "bun run validate.ts",
