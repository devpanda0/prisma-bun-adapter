{
  "name": "@abcx3/prisma-bun-adapter",
  "version": "1.1.5",
  "description": "Prisma adapters for Bun's native SQL clients (PostgreSQL, MySQL, SQLite)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./optimized": {
      "types": "./dist/optimized-index.d.ts",
      "import": "./dist/optimized-index.js",
      "require": "./dist/optimized-index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "INSTALL.md",
    "MIGRATION_SUMMARY.md",
    "PERFORMANCE_COMPARISON.md",
    "CHANGELOG.md"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "bun --watch src/index.ts",
    "test": "bun test",
    "debug:example": "bun --watch example/usage.ts",
    "test:multi": "bun run test-app/multi-adapter-comparison.ts",
    "test:comparison": "bun run test-app/bun-vs-prisma-comparison.ts",
    "test:comprehensive": "bun run test-app/comprehensive-test.ts",
    "test:performance": "bun run test-app/performance-comparison.ts",
    "test:bench:prisma-complex": "bun run test-app/complex-prisma-benchmarks.ts",
    "test:bench:sql-complex": "bun run test-app/complex-sql-benchmarks.ts",
    "demo:sqlite": "bun run test-app/sqlite-comparison-demo.ts",
    "demo:quick": "bun run test-app/quick-comparison-demo.ts",
    "db:start": "bun run test-app/setup-test-dbs.ts start",
    "db:stop": "bun run test-app/setup-test-dbs.ts stop",
    "db:restart": "bun run db:stop && bun run db:start",
    "setup:dbs": "bun run test-app/setup-test-dbs.ts",
    "setup:dbs:stop": "bun run test-app/setup-test-dbs.ts stop",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "prisma",
    "bun",
    "postgresql",
    "mysql",
    "sqlite",
    "adapter"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FredrikBorgstrom/prisma-bun-adapter.git"
  },
  "bugs": {
    "url": "https://github.com/FredrikBorgstrom/prisma-bun-adapter/issues"
  },
  "homepage": "https://github.com/FredrikBorgstrom/prisma-bun-adapter#readme",
  "peerDependencies": {
    "@prisma/client": "^6.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@prisma/driver-adapter-utils": "^6.0.0",
    "@types/pg": "^8.15.5",
    "pg": "^8.16.3"
  },
  "optionalDependencies": {
    "@prisma/adapter-pg": "^6.18.0",
    "@prisma/adapter-planetscale": "^6.0.0",
    "mysql2": "^3.15.3",
    "better-sqlite3": "^12.4.1"
  },
  "engines": {
    "node": ">=18",
    "bun": ">=1.1.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
